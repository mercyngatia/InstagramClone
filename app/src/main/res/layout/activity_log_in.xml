<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layer_list">
    <TextView
        android:text="Language: English (United States)"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/tvLanguage"
        android:textColor="@color/colorWhite"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/ivLogo"
        android:layout_below="@+id/tvLanguage" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textPersonName|textEmailAddress"
        android:hint="Enter Username or email"
        android:ems="10"
        android:id="@+id/etUserEmail"
        android:layout_below="@+id/ivLogo"
        android:textColorHint="@color/colorWhite"
        android:background="@drawable/button_border"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:textAlignment="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPassword"
        android:hint="Password"
        android:layout_below="@+id/etUserEmail"
        android:textColorHint="@color/colorWhite"
        android:background="@drawable/button_border"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:textAlignment="center"/>
    <Button
        android:text="Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonLogin"
        android:elevation="0dp"
        android:layout_below="@+id/etPassword"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button_border"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:textAlignment="center"/>
    <TextView
        android:text="Forgot your login details? Get help sign in."
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/tvForgot"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/ButtonLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="OR"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/tvOr"
        android:layout_below="@+id/tvForgot"
        android:textColor="@color/colorWhite"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/tvFacebook"
        android:text="Log in with Facebook"
        android:textColor="@color/colorWhite"
        android:drawableLeft="@mipmap/facebook"
        android:textAlignment="center"
        android:layout_below="@+id/tvOr"
        android:layout_centerHorizontal="true" />
    <Button
        android:text="Sign Up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonSignUp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorWhite"
        android:background="@drawable/half_overlay"
        android:layout_margin="@dimen/activity_vertical_margin"/>



</RelativeLayout>
